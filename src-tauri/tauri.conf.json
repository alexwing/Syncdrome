{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "syncdrome",
  "version": "0.1.0",
  "identifier": "com.syncdrome.app",
  "build": {
    "beforeDevCommand": "npm run start:server & npm run dev", 
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  
  "app": {    
    "windows": [
      {
        "title": "Syncdrome",
        "width": 1920,
        "height": 1080,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data:; connect-src 'self' ws://localhost:1420"
    }
  },
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
